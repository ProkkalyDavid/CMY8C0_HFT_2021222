<Window x:Class="CMY8C0_HFT_2021222.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMY8C0_HFT_2021222.WpfClient"
        xmlns:vms="clr-namespace:CMY8C0_HFT_2021222.WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">
    <Window.DataContext>
        <vms:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Button Content="Brand" Command="{Binding GoToBandsCommand}" Padding="10" Margin="10" FontSize="16" FontWeight="Bold" />
            <Button Content="Car" Command="{Binding GoToCarsCommand}" Padding="10" Margin="10" FontSize="16" FontWeight="Bold" />
            <Button Content="Engine" Command="{Binding GoToEnginesCommand}" Padding="10" Margin="10" FontSize="16" FontWeight="Bold" />
            <Button Content="Exit" Padding="10" Margin="10,100,10,10" FontSize="16" FontWeight="Bold" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
